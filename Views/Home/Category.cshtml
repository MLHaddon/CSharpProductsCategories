@model Association
<div class="container">
  <h1 class="text-center">@ViewBag.Category.Name</h1>
  <div class="d-flex flex-row justify-content-around">
    <div class="d-flex flex-column">
      <ul>
        <h2>Products: </h2>
        @foreach (Association a in ViewBag.Category.CategoryProducts)
        {
          <li>@a.Product.Name</li>
        }
      </ul>
    </div>
    <div class="d-flex flex-column">
      <form action="/Categories/@ViewBag.Category.CategoryId/AddProduct" method="post">
      <input type="hidden" asp-for="CategoryId" value="@ViewBag.Category.CategoryId">
        <div class="rounded p-2 bg-info">
          <select asp-for="ProductId">
          @foreach (Product product in ViewBag.NotProducts)
          {
            <option value="@product.ProductId">@product.Name</option>
          }
          </select>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>